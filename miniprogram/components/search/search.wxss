/* components/search/search.wxss */
.search-view{
  position: fixed;
  left:0;
  right:0;
  top:0;
  z-index:500;
  width: 100%;
  height: 100rpx;
  background: rgba(128, 128, 128, 0);
  display: flex;
  flex-direction: column;
}
.search-content{
   background: rgba(255, 255, 255, 0.959);
   width:650rpx;
   display: flex;
   flex-direction: row;
   align-items: center;
   padding-top: auto;
   padding-left: 20rpx;
   padding-bottom: auto;
   margin: auto;
   height: 70rpx;
   border-radius:5px 5px;
}
.search-icon{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.search-input{
  width: 500rpx;
  font-size: 28rpx;
}

.search-btn{
  width: 150rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  height: 70rpx;
  margin-right: 0rpx;
  background-color:rgb(248, 71, 115);
  font-size: 28rpx;
  align-items: center;
  border-top-left-radius: 0rpx;
  border-bottom-left-radius: 0rpx;
  color:#fff;
  border:none;
  position: relative;
}

.search-list {
  width: 80%;
  height: 200rpx;
  display: block;
  position: fixed;
  top: 100rpx;
  left: 10%;
}

.search-box {
  background-color: #ffffff;
  display: flex;
  flex-direction: row;
  justify-content: center;
  color: #808080;
  margin-top: 5rpx;
}

.close-search {
  background-color: #ffffff;
  display: flex;
  flex-direction: row;
  justify-content: center;
  color: #808080;
  margin-top: 5rpx;
}

