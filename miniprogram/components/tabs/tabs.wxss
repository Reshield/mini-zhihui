/* components/tabs/tabs.wxss */
.swiper-tab {
  width: 100%;
  background-color: #ffffff;
  border-bottom: 2rpx solid #cccccc;
  display: flex;
  flex-flow: row;
  justify-content: space-around;
}

.tab-item{
  color:#434343;
}

.active{
  color:#2A82E4;
  border-bottom: 4rpx solid #2A82E4;
}

.order-box {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 3%;
}

.order-statu {
  display: flex;
  background-color: #ffffff;
  flex-direction: row;
  justify-content: space-between;
}

.order-date, .order-send {
  font-size: 28rpx;
  color: #808080;
}

.order-commodities {
  background-color: #ffffff;
  width: 100%;
  margin-top: 4rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-top: 2%;
  padding-bottom: 2%;
}

.cmd-image {
  margin-left: 3%;
  width: 80rpx;
  height: 80rpx;
  float: left;
  border: 2rpx solid #cccccc;
  border-radius: 10rpx;
}

.cmd-text {
  margin-left: 2%;
}

.cmd-name {
  font-size: 24rpx;
  color: #000000;
}

.cmd-property {
  font-size: 24rpx;
  color: #808080;
}