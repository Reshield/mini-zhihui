/* components/dialog/dialog.wxss */
.salary-modal {
  width: 100%;
  height: 100%;
}

.salary-back {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 888;
  transition: all .2s ease-in-out;
  opacity: 0;
  visibility: hidden;
}

.salary-back.active {
  opacity: 1;
  visibility: visible;
}

.salary-content {
  width: 100%;
  background: #FFF;
  border-radius: 20rpx 20rpx 0px 0px;
  position: fixed;
  bottom: 0;
  z-index: 999;
  transform: translate3d(0, 100%, 0);
  transition: all .2s ease-in-out;
  visibility: hidden;
}

.flex-box {
    display: flex;
    flex-direction: column;
    width: 90%;
    background-color: burlywood;
}

.salary-content.active {
  transform: translate3d(0, 0, 0);
  visibility: visible;
}

.salary-modal-title {
  width: 100%;
  height: 110rpx;
  position: relative;
}

.salary-image {
    width: 180rpx;
    z-index: 1000;
    position: relative;
    border-radius: 8rpx;
    box-shadow: 0rpx 0rpx 10rpx #666666;
    margin-left: 5%;
    margin-top: -40rpx;
    float: left;
}

.price-box {
    display: flex;
    flex-direction: column;
    margin-left: 2%;
}

.price-text {
    font-size: 38rpx;
    color: #FF703A;
    margin-left: 2%;
}

.price-name {
    margin-left: 2%;
}

.salary-close {
    position: absolute;
    top: 2%;
    right: 2%;
}

.type-box {
    height: 200rpx;
    clear: left;
    margin-top: 2%;
}


