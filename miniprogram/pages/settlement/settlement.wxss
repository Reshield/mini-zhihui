/* pages/settlement/settlement.wxss */
.all-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%
}

.cell-box, .cell-commodity, .address-box {
  width: 90%;
  background-color: #ffffff;
  display: flex;
  border-radius: 20rpx;
  margin-bottom: 2%;
}

.cell-box {
  flex-direction: row;
  align-content: center;
  justify-content: space-between;
  padding: 10rpx 0rpx;
}

.address-text {
  margin-left: 2%;
}

.address-icon {
  margin-right: 2%;
}

.cell-commodity {
  flex-direction: column;
  align-items: center;
}

.cell-weight {
  display: flex;
  flex-direction: column;
  width: 90%;
  padding-top: 3%;
  padding-bottom: 3%;
}

.commodity-card {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.commodity-image {
  width: 100%;
}

.commodity-detail {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 10%;
  width: 100%;
}

.detail-box {
  display: flex;
  flex-direction: column;
}

.detail-name {
  color: #000000;
  font-size: large;
}

.detail-type {
  color: #B4B4B4;
  font-size: small;
}

.detail-price {
  color: #FF6539;
}

.number-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.box-title {
  margin-top: 2%;
  font-size: 32rpx;
}

.number-text {
  font-size: 28rpx;
  color: #AAAAAA;
}

.remarks-box {
  background-color: #F0F0F0;
}

.remarks-input {
  width: 80%;
  padding-left: 2%;
}

.address-box {
  padding: 10rpx 0rpx;
  justify-content: center;
}

.address-weight {
  display: flex;
  width: 90%;
  font-size: 28rpx;
}