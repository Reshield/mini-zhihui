/* pages/shoppingCart/shoppingCart.wxss */
page {
  background-color: #F8F8F8;
}

.commodity-list {
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  margin-top: 5%;
}

.scroll-view_H{
  white-space: nowrap;
}

.scroll-view {
  display: inline-block;
}

.commodity-cart {
  margin-top: 10rpx;
  width: 400rpx;
  margin-left: 28rpx;
  margin-right: 28rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  border-bottom: 2rpx solid #7C7C7C;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.delete-cart {
  margin-left: -80%;
}

.commodity-image {
  width: 80%;
  background-color: royalblue;
}

.split-line {
  height: 2rpx;
  background-color: #D8DDE5;
  width: 100%;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.commodity-price {
  font-size: 28rpx;
}

.number-box {
  margin-top: 8rpx;
  margin-bottom: 8rpx;
  display: flex;
  flex-direction: row;
  width: 60%;
}

.number-reduce {
  width: 20%;
  background-color: #FDD2D2;
  border-radius: 10rpx 0rpx 0rpx 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.number-show {
  border: 2rpx solid #cccccc;
  width: 60%;
  text-align: center;
}

.number-add {
  width: 20%;
  background-color: #FDD2D2;
  border-radius: 0rpx 10rpx 10rpx 0rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.price-box {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 90%;
  background-color: #ffffff;
  margin-left: 5%;
  margin-top: 5%;
  border-bottom: 2rpx solid #7C7C7C;
  border-radius: 10rpx;
}

.price-total , .price-coupon{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom:2rpx solid #cccccc ;
}

.price-finally {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx;
}

.cart-footer {
  position: fixed;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: #ffffff;
  bottom: 0;
}

.footer-radio {
  display: flex;
  flex-direction: row;
  margin-left: 20rpx;
}

.footer-button {
  display: block;
  height: 100%;
  width: 180rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: #FF6539;
  color: #ffffff;
  font-size: 30rpx;
}